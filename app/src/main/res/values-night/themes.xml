<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/backgroundColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="cardBackgroundColor">@color/overlay_dark_50</item>
        <item name="strokeColor">@color/overlay_dark_50</item>
    </style>

    <style name="backgroundCustom">
        <item name="android:background">@drawable/bg_top_rounded_night</item>
    </style>

    <style name="editTextStyle">
        <item name="android:background">@drawable/bg_custom_edittext_night</item>
        <item name="android:paddingStart">@dimen/activity_vertical_margin</item>
        <item name="android:paddingEnd">@dimen/activity_vertical_margin</item>
    </style>

</resources>